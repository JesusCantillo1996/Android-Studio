<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".ServicioActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar5"
        android:layout_width="414dp"
        android:layout_height="90dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#B5E3FA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="206dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar6"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar6"
        app:srcCompat="@drawable/icono" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="238dp"
        android:layout_height="243dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409">

        <RadioButton
            android:id="@+id/radio_luz"
            android:layout_width="238dp"
            android:layout_height="74dp"
            android:button="@android:drawable/checkbox_on_background"
            android:text="Air-e S.A.S. E.S.P."
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radio_agua"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:button="@android:drawable/checkbox_on_background"
            android:text="Triple A S.A. E.S.P."
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radio_gas"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:button="@android:drawable/checkbox_on_background"
            android:text="Gases del Caribe S.A. E.S.P."
            android:textSize="24sp" />

    </RadioGroup>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar6"
        android:layout_width="411dp"
        android:layout_height="109dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#B5E3FA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/pagar"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:backgroundTint="#2196F3"
        android:text="Pagar"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="146dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431"
        app:srcCompat="@drawable/triplea" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="156dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536"
        app:srcCompat="@drawable/gdc" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="206dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar6"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar6"
        app:srcCompat="@drawable/icono" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="209dp"
        android:layout_height="86dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar5"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar5"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar5"
        app:srcCompat="@drawable/icono" />

    <EditText
        android:id="@+id/cantidad_pagar"
        android:layout_width="239dp"
        android:layout_height="71dp"
        android:backgroundTint="#5E838181"
        android:ems="10"
        android:hint="Cantidad de Pago"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#B4232323"
        android:textColorHint="#70090909"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="149dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321"
        app:srcCompat="@drawable/logoaire" />


</androidx.constraintlayout.widget.ConstraintLayout>